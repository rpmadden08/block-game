package com.companyname.blockgame;

import java.awt.*;
import java.util.*;
import java.io.*;
import java.awt.image.*;

import javax.imageio.*;

import static com.companyname.blockgame.Constants.*;
import com.companyname.blockgame.BlockTypes.*;

public class MainMenu {
	public static int mainMenuLength = 3;
	public MainMenuButton[] mainMenuButtons = new MainMenuButton[4];
	
	public MainMenu() {
		mainMenuButtons[0] = new MainMenuButton("NEW GAME");
		mainMenuButtons[1] = new MainMenuButton("LOAD GAME");
		mainMenuButtons[2] = new MainMenuButton("OPTIONS");
		mainMenuButtons[3] = new MainMenuButton("QUIT");
		
	}
	
	public void tick() {
		
	}
	public void render(Graphics g) {
		for(int x=0; x<mainMenuLength;x++) {
			mainMenuButtons[x].render(g);
		}
	}
}


