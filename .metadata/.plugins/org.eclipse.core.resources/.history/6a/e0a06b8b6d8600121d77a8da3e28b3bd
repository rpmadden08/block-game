package net.ulixava.adventurecraft;

import java.awt.*;

public class Collectible extends Rectangle{
	private static final long serialVersionUID = 1L;
	public int x = 0;
	public int y = 0;
	public Collectible(int x2, int y2) {
		x = x2;
		y = y2;		
		
	}
	
	public Rectangle bounds() {
		return (new Rectangle(x+ 8,y + 8,Tile.tileSize,Tile.tileSize));
	}
	
	public void tick() {
		Rectangle rectangle1 = bounds();
		Rectangle rectangle2 = Component.character.bounds();
		if (rectangle1.intersects(rectangle2)) {
			System.out.println("Collision detected");
		}
		//If Collectible location is within the 4 locations than print collision...  
		//192 144
//		int left = (int) Component.character.x + 8 + (int) Character.frameOffsetLeft ; //193
//		int right = (int) Component.character.x + 8 + (int) Character.frameOffsetRight ;//206
//		int top = (int) Component.character.y + 16 + (int) Character.frameOffsetTop - 7; // 16
//		int bottom = (int) Component.character.y + 16 + (int) Character.frameOffsetBottom; 

	}
	
	public void render(Graphics g) {
		g.drawImage(Tile.tileset_terrain,
				x - (int) Component.sX,
				y - (int) Component.sY,
				x + Tile.tileSize - (int) Component.sX,
				y + Tile.tileSize - (int) Component.sY,
				Tile.earthClump[0] * Tile.tileSize,
				Tile.earthClump[1] * Tile.tileSize,
				Tile.earthClump[0] * Tile.tileSize + Tile.tileSize,
				Tile.earthClump[1] * Tile.tileSize + Tile.tileSize,
				null);
	}
}
