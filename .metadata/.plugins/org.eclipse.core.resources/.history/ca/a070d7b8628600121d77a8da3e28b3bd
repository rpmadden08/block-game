package net.ulixava.adventurecraft;

import java.awt.*;

public class Collectible {
	public int x = 0;
	public int y = 0;
	public Collectible(int x2, int y2) {
		x = x2;
		y = y2;
		System.out.println(Character.frameOffsetLeft);
		System.out.println(Character.frameOffsetRight);
		System.out.println(Character.frameOffsetTop);
		System.out.println(Character.frameOffsetBottom);
		System.out.println(x- Character.frameOffsetLeft);
		System.out.println(x+ Character.frameOffsetRight);
		System.out.println(y+ Character.frameOffsetTop);
		System.out.println(y+ Character.frameOffsetBottom);
		
	}
	
	public void isTouching() {
		
	}
	
	public void tick() {

	}
	
	public void render(Graphics g) {
		g.drawImage(Tile.tileset_terrain,
				x - (int) Component.sX,
				y - (int) Component.sY,
				x + Tile.tileSize - (int) Component.sX,
				y + Tile.tileSize - (int) Component.sY,
				Tile.earthClump[0] * Tile.tileSize,
				Tile.earthClump[1] * Tile.tileSize,
				Tile.earthClump[0] * Tile.tileSize + Tile.tileSize,
				Tile.earthClump[1] * Tile.tileSize + Tile.tileSize,
				null);
	}
}
